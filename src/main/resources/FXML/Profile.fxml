<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../CSS/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProfileController">
    <center>
        <VBox alignment="CENTER" maxWidth="300" spacing="10.0">
         <Label />
            <Label text="New Username" textFill="#ea0000">
            <font>
               <Font name="Imprint MT Shadow" size="14.0" />
            </font></Label>
            <TextField fx:id="username" alignment="CENTER" promptText="Your new name Here">
            <font>
               <Font name="Harrington" size="12.0" />
            </font></TextField>
            <Label text="New Password" textFill="#ea0000">
            <font>
               <Font name="Imprint MT Shadow" size="14.0" />
            </font></Label>
            <PasswordField fx:id="password" alignment="CENTER" promptText="Your new password here">
            <font>
               <Font name="Harrington" size="12.0" />
            </font></PasswordField>
            <HBox alignment="CENTER" spacing="10.0">
                <Button alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#changeNameAndPassword" style="-fx-background-color: green;" text="Change" textFill="#262845" />
                <Button alignment="CENTER" onMouseClicked="#reset" style="-fx-background-color: red;" text="Reset" />
            </HBox>
         <Button mnemonicParsing="false" onMouseClicked="#backToMainMenu" text="Back" />
         <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#deleteAccount" style="-fx-background-color: yellow;" text="Delete Account" />
        </VBox>
    </center>
</BorderPane>
