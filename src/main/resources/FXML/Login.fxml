<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../CSS/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Sample.Controller.LoginController">
    <center>
        <VBox alignment="CENTER" maxWidth="300" spacing="10.0">
         <Label fx:id="welcomeText" alignment="CENTER" prefHeight="18.0" prefWidth="321.0" text="Welcome" textFill="#250ee3">
            <font>
               <Font name="Euclid" size="20.0" />
            </font></Label>
         <Label />
            <Label text="Username" textFill="#ea0000">
            <font>
               <Font name="Imprint MT Shadow" size="14.0" />
            </font></Label>
            <TextField fx:id="username" alignment="CENTER" promptText="Your name Here">
            <font>
               <Font name="Harrington" size="12.0" />
            </font></TextField>
            <Label text="Password" textFill="#ea0000">
            <font>
               <Font name="Imprint MT Shadow" size="14.0" />
            </font></Label>
            <PasswordField fx:id="password" alignment="CENTER" promptText="Your password here">
            <font>
               <Font name="Harrington" size="12.0" />
            </font></PasswordField>
            <HBox alignment="CENTER" spacing="10.0">
                <Button alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#signIn" style="-fx-background-color: green;" text="Sign in" textFill="#262845" />
                <Button alignment="CENTER" onMouseClicked="#reset" style="-fx-background-color: red;" text="Reset" />
            </HBox>
         <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#goToRegisterMenu" style="-fx-background-color: yellow;" text="Don't have an account" />
         <Button mnemonicParsing="false" onMouseClicked="#LoginAsGuest" prefHeight="36.0" prefWidth="161.0" style="-fx-background-color: white;" text="Login as a guest" />
        </VBox>
    </center>
</BorderPane>
