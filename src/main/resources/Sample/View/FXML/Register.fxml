<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../CSS/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterController">
    <center>
        <VBox alignment="CENTER" maxWidth="300" spacing="10.0">
         <Label alignment="CENTER" prefHeight="18.0" prefWidth="321.0" fx:id="helloText" text="Hello" textFill="#250ee3">
            <font>
               <Font name="Euclid" size="20.0" />
            </font></Label>
         <Label />
            <Label text="Username" textFill="#ea0000">
            <font>
               <Font name="Imprint MT Shadow" size="14.0" />
            </font></Label>
            <TextField fx:id="username" alignment="CENTER" promptText="Your name Here">
            <font>
               <Font name="Harrington" size="12.0" />
            </font></TextField>
            <Label text="Password" textFill="#ea0000">
            <font>
               <Font name="Imprint MT Shadow" size="14.0" />
            </font></Label>
            <PasswordField fx:id="password" alignment="CENTER" promptText="Your password here">
            <font>
               <Font name="Harrington" size="12.0" />
            </font></PasswordField>
            <HBox alignment="CENTER" prefWidth="320.0" spacing="10.0">
                <Button alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#register" prefHeight="36.0" prefWidth="102.0" style="-fx-background-color: pink;" text="Register" textFill="#262845" />
            <Button alignment="CENTER" contentDisplay="CENTER" layoutX="109.0" layoutY="10.0" onMouseClicked="#backToLoginMenu" prefHeight="36.0" prefWidth="102.0" style="-fx-background-color: pink;" text="Back" textFill="#262845" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
