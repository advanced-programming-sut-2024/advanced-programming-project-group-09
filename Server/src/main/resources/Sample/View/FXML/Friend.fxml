<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../CSS/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Sample.Controller.FriendsController">

    <left>

        <VBox alignment="BOTTOM_LEFT" maxWidth="300" prefHeight="283.0" prefWidth="300.0" spacing="5.0">
            <TextField fx:id="searchField" alignment="BOTTOM_LEFT" prefHeight="35.0" prefWidth="231.0" promptText="destination username">
                <font>
                    <Font name="Harrington" size="12.0" />
                </font>
            </TextField>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#searchForFriendRequest" prefHeight="36.0" prefWidth="101.0" style="-fx-background-color: DarkMagenta;" text="Find" />
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#back" prefHeight="36.0" prefWidth="101.0" style="-fx-background-color: DarkMagenta;" text="back" />
        </VBox>
    </left>
    <center>
        <VBox fx:id="friendsListVbox" alignment="TOP_RIGHT" spacing="10">
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#showFriendsList" prefHeight="36.0" prefWidth="138.0" style="-fx-background-color: DarkMagenta;" text="show friends" />
            <Label text="Click to open chat " />

        </VBox>

    </center>

</BorderPane>
